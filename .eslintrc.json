{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard-with-typescript",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json",
    "extraFileExtensions": [".json"]
  },
  "plugins": ["react", "prettier"],
  "rules": { "prettier/prettier": "error" },
  "ignorePatterns": ["*.json"],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
